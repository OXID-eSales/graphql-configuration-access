{
    "name": "oxid-esales/graphql-configuration-access",
    "description": "OXID eSales GraphQL configuration access module",
    "type": "oxideshop-module",
    "keywords": ["oxid", "modules", "eShop", "GraphQL"],
    "homepage": "https://www.oxid-esales.com",
    "license": ["proprietary"],
    "require": {
        "php": "^8.0",
        "doctrine/dbal": "^v2.7",
        "oxid-esales/graphql-base": "dev-b-7.0.x"
    },
    "conflict": {
        "oxid-esales/oxideshop-ce": "<7.0",
        "oxid-esales/graphql-catalogue": "*",
        "oxid-esales/graphql-account": "*",
        "oxid-esales/graphql-checkout": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "^2.11",
        "oxid-esales/oxideshop-ce": "dev-b-7.0.x",
        "qossmic/deptrac-shim": "^0.24.0",
        "codeception/module-rest": "*",
        "codeception/module-phpbrowser": "*",
        "codeception/module-db": "*",
        "phpstan/phpstan": "^1.10"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "OxidEsales\\GraphQL\\ConfigurationAccess\\": "src",
            "OxidEsales\\GraphQL\\ConfigurationAccess\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=tests/phpcs.xml",
        "phpcbf": "phpcbf --standard=tests/phpcs.xml",

        "phpstan": "phpstan -ctests/PhpStan/phpstan.neon analyse src/",
        "phpstan-report": "phpstan -ctests/PhpStan/phpstan.neon analyse src/ --error-format=json > phpstan.report.json",

        "phpmd": "phpmd src text cleancode,codesize,design,unusedcode",
        "phpmd-report": "phpmd src json cleancode,codesize,design,naming,unusedcode --reportfile phpmd.report.json",

        "deptrac": "deptrac analyze",

        "static": [
            "@phpcs",
            "@phpstan",
            "@deptrac",
            "@phpmd"
        ],

        "phpunit": "vendor/bin/phpunit --bootstrap=/var/www/source/bootstrap.php --config=tests/",
        "phpunit-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text --bootstrap=/var/www/source/bootstrap.php --config=tests/ --coverage-html=tests/result/coverage",

        "codeception": "MODULE_IDS=oe_graphql_base,oe_graphql_configuration_access /var/www/vendor/bin/codecept run acceptance -c /var/www/vendor/oxid-esales/graphql-configuration-access/tests/codeception.yml --no-redirect"
    },
    "config": {
        "allow-plugins": {
            "oxid-esales/oxideshop-unified-namespace-generator": true,
            "oxid-esales/oxideshop-composer-plugin": true
        }
    }
}
